pipeline {
    agent any

    environment {
        CONTAINER_NAME = 'nestjs-app'
        IMAGE_NAME = 'nest-image'
        EMAIL = "pandaysagar2004@gmail.com"
        PORT = "3000"
    }

    stages {

        stage('clone repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/MySagarGitHub/CI-Cd-pipeline-using-Jenkins-Github-weebhook-ububtu-Aws-Ec2-Docker'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME'
            }
        }

        stage('stop and remove existing container') {
            steps {
                sh '''
                    docker stop $CONTAINER_NAME || true
                    docker rm $CONTAINER_NAME || true
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                    docker run -d -p ${PORT}:${PORT} --name $CONTAINER_NAME $IMAGE_NAME
                '''
            }
        }

        stage('Send Notification Email') {
            steps {
                emailtext(
                    subject: "Deployment Successful: ${IMAGE_NAME}",
                    body: "The Docker container ${CONTAINER_NAME} has been successfully deployed and is running on port http://100.48.59.4:8080/.",
                    to: "${EMAIL}"
                )
            }
        }

    }
}
